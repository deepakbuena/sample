        <actions>
            <name>FF_Set_Ready_to_Invoice_Y</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contract_Lines__c.Next_Invoice_Date__c</field>
