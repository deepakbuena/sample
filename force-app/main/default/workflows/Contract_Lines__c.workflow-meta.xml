            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract_Lines__c.Remaining_Invoices__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract_Lines__c.Ready_to_Invoice__c</field>
            <operation>equals</operation>
            <value>False</value>
