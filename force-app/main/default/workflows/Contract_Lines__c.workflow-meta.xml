                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Contract_Lines__c.Next_Invoice_Date__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
