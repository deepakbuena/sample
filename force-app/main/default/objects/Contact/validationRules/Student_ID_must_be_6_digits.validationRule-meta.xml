<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Student_ID_must_be_6_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(LEN( Student_ID__c ) &gt; 0 ,LEN(Student_ID__c) &lt;&gt; 6)</errorConditionFormula>
    <errorMessage>Student ID, if filled, must be 6 digits</errorMessage>
</ValidationRule>
